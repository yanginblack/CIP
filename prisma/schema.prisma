// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Appointment {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  startUtc    DateTime
  staff       String
  notes       String?
  checkinTime DateTime?
  checkoutTime DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([lastName, firstName])
  @@index([startUtc])
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("ADMIN") // ADMIN or SYSTEM_ADMIN
  createdAt DateTime @default(now())
}

model Staff {
  staffId        String   @id @default(cuid())
  name           String
  service        String
  googleCalendar String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([name])
}
